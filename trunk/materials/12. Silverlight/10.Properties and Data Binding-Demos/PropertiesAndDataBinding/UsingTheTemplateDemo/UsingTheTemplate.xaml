<UserControl x:Class="UsingTheTemplateDemo.UsingTheTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="800" Height="300">
    <StackPanel x:Name="StackOfBalls" Orientation="Horizontal" >
        <Button x:Name="Group" Width="100" Height="100" 
            Content="{Binding Group}" Click="Button_Click"
            Style="{StaticResource RoundButton}" />
        <Button x:Name="Album" Width="100" Height="50"
            Content="{Binding AlbumName}" Click="Button_Click"
            Style="{StaticResource RoundButton}" />
        <Button x:Name="Genre"  Width="100" Height="150"
            Content="{Binding Genre}" Click="Button_Click"
            Style="{StaticResource RoundButton}" />
        <Button x:Name="Performers" Width="300" Height="300" 
            Style="{StaticResource RoundButton}" >
            <Button.Content>
                <ListBox x:Name="PerformerList" 
                ItemsSource="{Binding  Performers, Mode=OneWay}"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Height="90" Width="200"/>
            </Button.Content>
        </Button>
        <TextBlock x:Name="Msg"
                  Foreground="Red" Text="" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </StackPanel>
</UserControl>
