<UserControl x:Class="MousePositionDemo.MousePosition"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Canvas Name="myCanvas" MouseEnter="Canvas_MouseEnter">
            <Rectangle Width="200" Height="75" Stroke="Orange" StrokeThickness="15" />
            <TextBlock FontFamily="Arial" FontSize="28" Canvas.Left="25" Canvas.Top="25" 
             Foreground="Black" 
             Text="X: ??  Y: ??" x:Name="MousePositionText" />
        </Canvas>
    </Grid>
</UserControl>
