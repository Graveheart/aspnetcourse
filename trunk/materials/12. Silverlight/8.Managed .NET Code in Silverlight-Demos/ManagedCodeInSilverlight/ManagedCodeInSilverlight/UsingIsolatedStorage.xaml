<UserControl x:Class="ManagedCodeInSilverlight.UsingIsolatedStorage"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="AliceBlue">
        <Canvas  Width="70" Height="50" Background="red" HorizontalAlignment="Left" >
            <Button Height="50" Width="70" Content="Write" x:Name="buttonWrite" Click="buttonWrite_Click"></Button>
        </Canvas>
        <Canvas Width="70" Height="50" HorizontalAlignment="Right" Background="Blue">
            <Button Height="50" Width="70" Content="Read" x:Name="buttonRead" Click="buttonRead_Click"></Button>
        </Canvas>
        <Canvas VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock x:Name="txtData" Width="400" Height="100" VerticalAlignment="Center"></TextBlock>
        </Canvas>
    </Grid>
</UserControl>
