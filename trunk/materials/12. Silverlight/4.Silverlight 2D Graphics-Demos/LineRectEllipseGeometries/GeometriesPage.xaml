<UserControl x:Class="LineRectEllipseGeometries.GeometriesPage"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="420">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <!--Rectangle and RectangleGeometry-->
        <Rectangle Fill="Yellow" Stroke="Blue" 
             Width="100" Height="50"></Rectangle>
        <Path Fill="Green" Stroke="Blue">
            <Path.Data>
                <RectangleGeometry Rect="0,0 100,50"></RectangleGeometry>
            </Path.Data>
        </Path>
            <!--Line and LineGeometry-->
        <Line Stroke="Blue" X1="170" Y1="0" X2="120" Y2="100"></Line>
        <Path Fill="Green" Stroke="Green">
            <Path.Data>
                <LineGeometry StartPoint="20,0" EndPoint="20,100"></LineGeometry>
            </Path.Data>
        </Path>
            <!--Ellipse and EllipseGeometry-->
        <Ellipse Fill="Yellow" Stroke="Blue" 
            Width="100" Height="50"></Ellipse>
        <Path Fill="Green" Stroke="Blue">
            <Path.Data>
                <EllipseGeometry RadiusX="50" RadiusY="25" Center="50,25"></EllipseGeometry>
            </Path.Data>
        </Path>
     </StackPanel>
    </Grid>
</UserControl>
