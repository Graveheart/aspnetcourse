<UserControl x:Class="ShapesDemo.Shapes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="800">
    <Canvas x:Name="LayoutRoot" Background="White">
        <Rectangle Width="300" Height="100" Fill="Green" Stroke="Black"
StrokeThickness="10" RadiusX="20" RadiusY="20"/>

        <Ellipse Canvas.Left="10" Canvas.Top="110" Width="100" Height="100" Fill="Brown" Stroke="Black"
StrokeThickness="10"/>

        <Polygon Canvas.Left="10" Canvas.Top="200" Fill="Yellow" Stroke="Black" StrokeThickness="10"
Points="20,20 100,100 200,10 300,100"/>

        <Polygon Canvas.Left="10" Canvas.Top="320" Fill="Red" Stroke="Black" StrokeThickness="10"
  Points="50,100 350,100 300,200 250,20 175,200 150,30 100,200 100,200 200,20
250,200 300,20 350,175" FillRule="EvenOdd"/>

        <Polygon Canvas.Left="10" Canvas.Top="550" Fill="Red" Stroke="Black" StrokeThickness="10"
Points="50,100 350,100 300,200 250,20 175,200 150,30 100,200 100,200 200,20
250,200 300,20 350,175" FillRule="NonZero"/>
    </Canvas>
</UserControl>
