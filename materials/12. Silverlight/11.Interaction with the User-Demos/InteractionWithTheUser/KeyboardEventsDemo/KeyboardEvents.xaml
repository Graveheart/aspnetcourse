<UserControl x:Class="KeyboardEventsDemo.KeyboardEvents"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300" KeyDown="UserControl_KeyDown">
    <Grid x:Name="LayoutRoot" Background="White">
        <Canvas >
            <Rectangle Width="200" Height="75" Stroke="Orange" StrokeThickness="15" />
            <TextBlock FontFamily="Arial" FontSize="32" Canvas.Left="30" Canvas.Top="20"
             Foreground="Black" Text="" Name="InputBox" />
         </Canvas>
    </Grid>
</UserControl>
